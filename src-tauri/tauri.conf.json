{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "ChatGPT",
    "version": "../package.json"
  },
  "tauri": {
    "macOSPrivateApi": true,
    "allowlist": {
      "all": true,
      "shell": {
        "all": false,
        "open": true
      },
      "globalShortcut": {
        "all": true
      },
      "http": {
        "request": true,
        "scope": [
          "https://**",
          "http://**"
        ]
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "targets": [
        "deb",
        "msi",
        "dmg"
      ],
      "identifier": "com.ChatGPT-Desktop",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "api.openai.com",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "wix": {
          "language": "zh-CN"
        }
      },
      "shortDescription": "ChatGPT-Desktop",
      "longDescription": "ChatGPT 跨平台客户端，快捷键快速唤醒窗口，问答快人一步！"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "resizable": false,
        "maximized": false,
        "title": "ChatGPT",
        "alwaysOnTop": false,
        "decorations": false,
        "transparent": true
      }
    ],
    "systemTray": {
      "iconPath": "assets/tray.png",
      "iconAsTemplate": true
    }
  }
}